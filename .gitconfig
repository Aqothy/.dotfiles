# This is Git's per-user configuration file.
[user]
	email = aq0335@gmail.com
	name = Aqothy
# Please adapt and uncomment the following lines:
#	name = Anthony Qiu
#	email = aq0335@gmail.com

[column]
    ui = auto

[color]
  ui = auto

[branch]
    sort = -committerdate

[credential]

[core]
	excludesfile = ~/.gitignore

[push]
	autoSetupRemote = true

[pull]
    rebase = true

[help]
    autocorrect = prompt

[commit]
    verbose = true

[merge]
	conflictstyle = diff3
    tool = nvimdiff

[mergetool]
    keepBackup = false

[mergetool "nvimdiff"]
    cmd = nvim -d $MERGED $LOCAL $REMOTE -c 'wincmd J'

[diff]
    algorithm = histogram
    renames = true

[diff]
    tool = nvimdiff

[difftool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE
