# This is Git's per-user configuration file.
[user]
	email = aq0335@gmail.com
	name = Aqothy
# Please adapt and uncomment the following lines:
#	name = Anthony Qiu
#	email = aq0335@gmail.com

[column]
    ui = auto

[color]
  ui = auto

[branch]
    sort = -committerdate

[credential]

[core]
	excludesfile = ~/.gitignore

[fetch]
    prune = true
    pruneTags = true
    all = true

[push]
	autoSetupRemote = true
    followTags = true

[pull]
    rebase = true

[init]
    defaultBranch = main

[help]
    autocorrect = prompt

[commit]
    verbose = true

[merge]
	conflictstyle = diff3
    tool = nvimdiff

[mergetool]
    keepBackup = false

[mergetool "nvimdiff"]
    cmd = nvim -d $MERGED $REMOTE $LOCAL -c 'wincmd J'

[diff]
    algorithm = histogram
    renames = true
    colorMoved = plain
    mnemonicPrefix = true
    tool = nvimdiff

[difftool "nvimdiff"]
    cmd = nvim -d $REMOTE $LOCAL
