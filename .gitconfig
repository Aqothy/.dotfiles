# This is Git's per-user configuration file.
[user]
    email = aq0335@gmail.com
    name = Aqothy
# Please adapt and uncomment the following lines:
#   name = Anthony Qiu
#   email = aq0335@gmail.com

[column]
    ui = auto

[color]
  ui = auto

[branch]
    sort = -committerdate

[credential]

[core]
    excludesfile = ~/.gitignore_global

[fetch]
    all = true

[push]
    autoSetupRemote = true
    followTags = true

[pull]
    rebase = true

[help]
    autocorrect = prompt

[commit]
    verbose = true

[merge]
    conflictstyle = diff3
    tool = nvimdiff

[mergetool]
    keepBackup = false

[mergetool "nvimdiff"]
    cmd = nvim -d $LOCAL $MERGED $REMOTE

[diff]
    algorithm = histogram
    renames = true
    mnemonicPrefix = true
    colorMoved = plain
    tool = nvimdiff

[difftool "nvimdiff"]
    cmd = nvim -d $LOCAL $REMOTE
