[core]
    excludesfile = ~/.gitignore_global
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    syntax-theme = gruvbox-dark

[merge]
    conflictStyle = zdiff3

[column]
    ui = auto

[branch]
    sort = -committerdate

[credential]

[fetch]
    all = true

[push]
    autoSetupRemote = true
    followTags = true

[pull]
    rebase = true

[help]
    autocorrect = prompt

[commit]
    verbose = true

[diff]
    algorithm = histogram
    renames = true
