{
  "agent": {
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    }
  },
  "base_keymap": "VSCode",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "buffer_font_family": "Hack Nerd Font Mono",
  "terminal": {
    "line_height": { "custom": 1.15 }
  },
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "vertical_scroll_margin": 8,
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Soft",
    "dark": "Gruvbox Dark Soft"
  }
}
